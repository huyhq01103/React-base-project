body
  font-body()
  font-size $fs-base
  line-height $line-height
  +breakpoint(tablet)
    font-size 14px
  +breakpoint(mobile)
    font-size 12px 
  
aside
  font-size 0.8em
  
h1, h2, h3, h4, h5, h6
  font-weight bold
  margin 0 0 1em 0
  padding 0
  line-height 1.1
h1, .h1
  font-size 2.5em
  margin 0 0 1em 0
  +breakpoint(mobile)
    font-size 1.8em
h2, .h2
  font-size 2.0em
  margin 0 0 1em 0
  +breakpoint(mobile)
    font-size 1.7em
h3, .h3
  // In blog post sub sections
  font-size 1.8em
  margin-top 50px
  +breakpoint(mobile)
    font-size 1.6em
h4, .h4
  font-size 1.2em
  margin 0 0 0.8em 0
  +breakpoint(mobile)
    font-size 1.2em
h5, .h5
  font-size 1.0em
  margin 0
  text-transform uppercase
  +breakpoint(mobile)
    font-size 1.0em
h6
  // Not really used
  font-size 1.0em

