#loading
	padding 5rem 0
	display flex
	align-items center
	justify-content center
	// background-color rgba($color white, $alpha 0.5)
	background-color: rgba(white, 0.5)
	color transparent
	font-size 0
	.c-loader
		width 50px
		height 50px
		border 6px solid #e5e5e5
		border-top-color $primary
		display block
		animation is-rotating 1s infinite
		border-radius 50%
